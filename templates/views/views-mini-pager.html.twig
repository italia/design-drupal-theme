{#
/**
 * @file
 * Default theme implementation for a views mini-pager.
 *
 * Available variables:
 * - heading_id: Pagination heading ID.
 * - items: List of pager items.
 *
 * @see template_preprocess_views_mini_pager()
 *
 * @ingroup themeable
 */
#}
{% if items["next"] or items["previous"] %}
  {% include '@bi-bcl/pagination/pagination.html.twig' with {
    heading_id: heading_id,
    items: items,
    current: null,
    ellipses: null,
    total_pages: null,
    alignment: pager_alignment,
    responsive: false,
    jump_to_page: false,
    show_first_last_page_link: false,
    text_controls: pager_text_controls,
    text_previous: pager_text_controls ? items.previous.text : '',
    text_next: pager_text_controls ? items.next.text : '',
    show_total_pages: false
  } %}
{% endif %}
