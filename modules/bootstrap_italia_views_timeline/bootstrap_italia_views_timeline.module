<?php

/**
 * @file
 * Timeline Views module help and theme functions.
 */

use Drupal\bootstrap_italia_views_timeline\Plugin\views\style\TimelineStyle;

/**
 * Implements hook_theme().
 */
function bootstrap_italia_views_timeline_style_theme($existing, $type, $theme, $path): array {
  return [
    'views_bootstrap_italia_views_timeline' => [
      'variables' => [
        'view' => NULL,
        'rows' => NULL,
        'options' => NULL,
      ],
    ],
  ];
}

/**
 * Prepares variables for bootstrap list templates.
 *
 * Default template: views-bootstrap-italia-views-timeline.html.twig.
 *
 * @param array $variables
 *   An associative array containing:
 *   - view: A ViewExecutable object.
 *   - rows: The raw row data.
 */
function template_preprocess_views_bootstrap_italia_views_timeline(array &$variables): void {
  // Update options for twig.
  $variables['options'] = $variables['view']->style_plugin->options;
}

/**
 * Implements hook_theme_suggestions_block_alter().
 */
function bootstrap_italia_views_timeline_theme_suggestions_block_alter(array &$suggestions, array $variables): void {
  if (isset($variables['elements']['content']['#view'])) {
    $view = $variables['elements']['content']['#view'];

    // TODO: This condition is always false?
    if ($view->style_plugin instanceof TimelineStyle) {
      $suggestions[] = 'block__views_views_bi_timeline__' . $view->id();
      $suggestions[] = 'block__views_views_bi_timeline';
    }
  }
}

/**
 * Implements hook_theme_suggestions_views_view_alter().
 */
function bootstrap_italia_views_timeline_theme_suggestions_views_view_alter(array &$suggestions, array $variables): void {
  if ($variables['view']->style_plugin instanceof TimelineStyle) {
    $suggestions[] = $variables['theme_hook_original'] . '_bi_timeline__' . $variables['view']->storage->id();
    $suggestions[] = $variables['theme_hook_original'] . '_bi_timeline';
  }
}

/**
 * Implements hook_theme_suggestions_HOOK_alter().
 */
function bootstrap_italia_views_timeline_theme_suggestions_views_bootstrap_italia_views_timeline_alter(array &$suggestions, array $variables): void {
  if ($variables['view']->style_plugin instanceof TimelineStyle) {
    $suggestions[] = $variables['theme_hook_original'] . '_bi_timeline__' . $variables['view']->storage->id();
    $suggestions[] = $variables['theme_hook_original'] . '_bi_timeline';
  }
}
