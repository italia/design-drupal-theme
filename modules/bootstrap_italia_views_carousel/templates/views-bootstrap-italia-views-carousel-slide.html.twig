{#
/**
 * Default theme implementation for Views to output a splide slide.
 *
 * Available variables:
 * - options.bi_carousel_slide_settings: View plugin style options:
 *   - carousel_image_type
 *   - carousel_title_show
 *   - carousel_title_tag
 *   - carousel_title_classes
 *
 * @see template_preprocess_views_bootstrap_italia_views_carousel_slide()
 *
 * @ingroup themeable
 */
#}
{% embed '@bi-bcl/carousel/carousel-slide.html.twig' with {
  slide_image_wrapper: options.bi_carousel_slide_settings.carousel_image_type is not empty ? true,
  slide_classes: _slide_classes,
  slide_attributes: _slide_attributes
} %}
  {% block slideContent %}
    {% if options.bi_carousel_settings.carousel_title_show %}
      <{{ options.bi_carousel_settings.carousel_title_tag }} class="{{ options.bi_carousel_settings.carousel_title_classes }}">
        {{ title_prefix }}
        {{ title }}
        {{ title_suffix }}
      </{{ options.bi_carousel_settings.carousel_title_tag }}>
    {% endif %}
    {% for slide in rows %}
      {{ slide }}
    {% endfor %}
  {% endblock %}
{% endembed %}
